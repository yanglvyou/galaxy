{
  "compilerOptions": {
    "allowJs": true,
    "noImplicitThis": true,
    "types": ["vue/jsx", "csstype"],
    "baseUrl": ".",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "strict": true,
    "target": "ES2015",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "lib": ["esnext", "dom"]
  },
  "include": ["src/**/*", "docs/**/*", "test/**/*"],
  "exclude": ["**/node_modules", "**/.*/"]
}
